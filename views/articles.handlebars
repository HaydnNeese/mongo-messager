<div class="jumbotron jumbotron-fluid text-center" id="article-jumbotron">
    <div class="container">
        <h1 class="display-4">Gamespot Scraper</h1>
        <p>Here are your top Gamespot articles</p>
    </div>
</div>
{{!-- cards holding the articles --}}
{{#each articles}}
<div class="card text-center" id="{{_id}}">
    <img class="card-img-top" src="{{image}}" alt="Card image cap">
    <div class="card-body">
        <a href="https://www.gamespot.com{{link}}">
            <h5 class="card-title">{{title}}</h5>
        </a>
        <p class="card-text">
            {{summary}}
        </p>
    </div>
    <div class="card-footer">
        <small class="text-muted">{{time}}</small>
    </div>
    <button data-id="{{_id}}" type="button" class="btn btn-info save-article">Save article</button>
</div>
{{/each}}


